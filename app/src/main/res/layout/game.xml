<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="Player 1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_p1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/tv_p1"
        android:layout_toRightOf="@+id/tv_p1"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_round_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_p1_score"
        android:layout_alignBottom="@+id/tv_p1_score"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/tv_p1_score"
        android:layout_toRightOf="@+id/tv_p1_score"
        android:text="Round 1/5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_shot_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_p2_score"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/tv_p2_score"
        android:layout_toRightOf="@+id/tv_p2_score"
        android:text="Shot 0/5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_p1"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/tv_p1_score"
        android:layout_toStartOf="@+id/tv_p1_score"
        android:text="Player 2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_p2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_p1"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/tv_p1"
        android:layout_toRightOf="@+id/tv_p1"
        android:text="0"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_p2">

        <TextView
            android:id="@+id/tv_shot_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="test text"
            android:textSize="18sp" />

    </ScrollView>


</RelativeLayout>